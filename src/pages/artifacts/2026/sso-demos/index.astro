---
// src/pages/artifacts/2026/sso-demos/index.astro
import '../../../../styles/tailwind.css';

const pageTitle = "SSO Authentication Flow Demos";
const pageDescription = "Interactive visualizations of enterprise SSO authentication patterns and protocol bridging";

const demos = [
  {
    id: "oidc-saml-bridge",
    title: "OIDC‚ÜíSAML Bridge via Forward Auth",
    subtitle: "Caddy + Logto + Entra ID",
    description: "SP-initiated flow with external auth gateway and protocol bridging. Shows OIDC-to-SAML translation for enterprise SSO where the application uses OIDC but the IdP uses SAML.",
    tags: ["OIDC", "SAML", "Forward Auth", "Protocol Bridging"],
    icon: "üîê",
    path: "/artifacts/2026/sso-demos/oidc-saml-bridge/",
  }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={pageDescription}>
  <meta name="author" content="Onetime Secret">
  <meta name="theme-color" content="#111827">
  <title>{pageTitle}</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      text-rendering: optimizeLegibility;
    }
  </style>
</head>
<body class="bg-gray-900 font-sans text-gray-100">
  <div class="flex min-h-screen flex-col p-8">
    <div class="mx-auto w-full max-w-4xl flex-1">
      {/* Header */}
      <header class="mb-16 text-center">
        <h1 class="mb-4 bg-gradient-to-r from-amber-200 via-yellow-300 to-amber-200 bg-clip-text text-4xl font-bold tracking-tight text-transparent">
          SSO Authentication Flow Demos
        </h1>
        <p class="text-xl text-gray-300">
          Interactive visualizations of popular SSO patterns
        </p>
        <p class="mx-auto mt-3 max-w-2xl text-sm text-gray-500">
          Explore different authentication architectures, protocol combinations, and integration patterns
        </p>
      </header>

      {/* Featured Demo */}
      <div class="mb-10">
        {demos.map((demo) => (
          <a
            href={demo.path}
            class="group relative block overflow-hidden rounded-xl border border-gray-600 bg-gradient-to-br from-gray-800 to-gray-900 p-8 shadow-lg transition-all hover:border-blue-500 hover:shadow-2xl hover:shadow-blue-500/20"
          >
            {/* Subtle gradient overlay */}
            <div class="pointer-events-none absolute inset-0 bg-gradient-to-br from-blue-600/5 to-purple-600/5" />

            {/* Icon and Title */}
            <div class="relative mb-6 flex items-start gap-5">
              <div class="flex h-14 w-14 flex-shrink-0 items-center justify-center rounded-xl bg-gradient-to-br from-blue-500 to-purple-600 text-3xl shadow-lg shadow-purple-500/20">
                {demo.icon}
              </div>
              <div class="flex-1">
                <h2 class="text-2xl font-bold text-gray-100 group-hover:text-blue-400 transition-colors">
                  {demo.title}
                </h2>
                <p class="mt-1.5 text-sm font-medium text-gray-400">
                  {demo.subtitle}
                </p>
              </div>
            </div>

            {/* Description */}
            <p class="relative mb-6 text-base leading-relaxed text-gray-300">
              {demo.description}
            </p>

            {/* Tags */}
            <div class="relative flex flex-wrap gap-2">
              {demo.tags.map((tag) => (
                <span class="rounded-md border border-gray-600 bg-gray-700/50 px-3 py-1.5 text-xs font-medium text-gray-200">
                  {tag}
                </span>
              ))}
            </div>

            {/* Arrow indicator */}
            <div class="relative mt-6 flex items-center text-sm font-semibold text-blue-400 transition-transform group-hover:translate-x-2">
              View Demo
              <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </a>
        ))}
      </div>

      {/* Coming Soon Section */}
      <div class="rounded-xl border border-gray-700/50 bg-gray-800/30 p-6">
        <div class="mb-5 flex items-center gap-3">
          <div class="h-px flex-1 bg-gradient-to-r from-transparent via-gray-600 to-transparent" />
          <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-400">
            Coming Soon
          </h3>
          <div class="h-px flex-1 bg-gradient-to-r from-transparent via-gray-600 to-transparent" />
        </div>
        <div class="grid gap-4 sm:grid-cols-2">
          <div class="group rounded-lg border border-gray-700/60 bg-gray-800/40 p-4 transition-colors hover:border-gray-600 hover:bg-gray-800/60">
            <div class="mb-2 flex items-center gap-3">
              <span class="text-xl opacity-70">üåê</span>
              <h4 class="font-semibold text-gray-300">Pure OIDC via Forward Auth</h4>
            </div>
            <p class="text-sm text-gray-400">
              Caddy + OAuth2 Proxy + Auth0
            </p>
            <div class="mt-3 flex flex-wrap gap-1.5">
              <span class="rounded border border-gray-600/50 bg-gray-700/30 px-2 py-0.5 text-xs text-gray-400">OIDC</span>
              <span class="rounded border border-gray-600/50 bg-gray-700/30 px-2 py-0.5 text-xs text-gray-400">Forward Auth</span>
            </div>
          </div>

          <div class="group rounded-lg border border-gray-700/60 bg-gray-800/40 p-4 transition-colors hover:border-gray-600 hover:bg-gray-800/60">
            <div class="mb-2 flex items-center gap-3">
              <span class="text-xl opacity-70">‚ö°</span>
              <h4 class="font-semibold text-gray-300">Pure OIDC via Application SDK</h4>
            </div>
            <p class="text-sm text-gray-400">
              Next.js + NextAuth.js + Okta
            </p>
            <div class="mt-3 flex flex-wrap gap-1.5">
              <span class="rounded border border-gray-600/50 bg-gray-700/30 px-2 py-0.5 text-xs text-gray-400">OIDC</span>
              <span class="rounded border border-gray-600/50 bg-gray-700/30 px-2 py-0.5 text-xs text-gray-400">SDK Integration</span>
            </div>
          </div>

          <div class="group rounded-lg border border-gray-700/60 bg-gray-800/40 p-4 transition-colors hover:border-gray-600 hover:bg-gray-800/60">
            <div class="mb-2 flex items-center gap-3">
              <span class="text-xl opacity-70">‚òÅÔ∏è</span>
              <h4 class="font-semibold text-gray-300">OAuth2 via Cloud Gateway</h4>
            </div>
            <p class="text-sm text-gray-400">
              AWS ALB + Cognito
            </p>
            <div class="mt-3 flex flex-wrap gap-1.5">
              <span class="rounded border border-gray-600/50 bg-gray-700/30 px-2 py-0.5 text-xs text-gray-400">OAuth2</span>
              <span class="rounded border border-gray-600/50 bg-gray-700/30 px-2 py-0.5 text-xs text-gray-400">Cloud Gateway</span>
            </div>
          </div>

          <div class="group rounded-lg border border-gray-700/60 bg-gray-800/40 p-4 transition-colors hover:border-gray-600 hover:bg-gray-800/60">
            <div class="mb-2 flex items-center gap-3">
              <span class="text-xl opacity-70">üîÑ</span>
              <h4 class="font-semibold text-gray-300">OIDC via BFF Pattern</h4>
            </div>
            <p class="text-sm text-gray-400">
              React SPA + Express BFF + Keycloak
            </p>
            <div class="mt-3 flex flex-wrap gap-1.5">
              <span class="rounded border border-gray-600/50 bg-gray-700/30 px-2 py-0.5 text-xs text-gray-400">OIDC</span>
              <span class="rounded border border-gray-600/50 bg-gray-700/30 px-2 py-0.5 text-xs text-gray-400">BFF Pattern</span>
            </div>
          </div>
        </div>
        <p class="mt-5 text-center text-xs text-gray-500">
          Additional authentication flow demonstrations are in development
        </p>
      </div>

      {/* Footer */}
      <footer class="mt-auto pt-16 text-center">
        <div class="border-t border-gray-800 pt-8">
          <p class="text-sm text-gray-500">
            These demonstrations are designed for technical analysts evaluating SSO integration patterns.
          </p>
          <p class="mt-3">
            <a href="https://docs.onetimesecret.com" class="text-sm text-gray-400 hover:text-gray-200 transition-colors">
              ‚Üê Back to Documentation
            </a>
          </p>
        </div>
      </footer>
    </div>
  </div>
</body>
</html>
