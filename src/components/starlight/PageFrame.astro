---
// Custom PageFrame component that adds the landing grid to splash pages
import type { Props } from '@astrojs/starlight/props';
---

<div class="page-frame">
  {Astro.props.entry.data.template === 'splash' && <div class="landing-grid"></div>}
  <slot />
</div>

<style>
.page-frame {
  position: relative;
}

.landing-grid {
  position: absolute;
  inset: 0;
  z-index: -1;
  background-size: 40px 40px;
  background-image:
    linear-gradient(to right, rgba(255, 255, 255, 0.03) 1px, transparent 1px),
    linear-gradient(to bottom, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
  overflow: hidden;
}

.landing-grid:before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 50% 30%, rgba(220, 74, 34, 0.1), transparent 70%);
}
</style>
