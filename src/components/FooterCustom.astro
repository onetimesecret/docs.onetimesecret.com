</Default>

<style>
  .custom-footer {
    margin-top: 4rem;
    border-top: 1px solid var(--sl-color-hairline);
    padding-top: 2rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-column h3 {
    font-size: 1.15rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--sl-color-white);
  }

  .footer-column p {
    color: var(--sl-color-gray-3);
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-column li {
    margin-bottom: 0.5rem;
  }

  .footer-column a {
    color: var(--sl-color-gray-3);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s;
  }

  .footer-column a:hover {
    color: var(--sl-color-white);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
    border-top: 1px solid var(--sl-color-hairline-light);
    color: var(--sl-color-gray-3);
    font-size: 0.875rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    color: var(--sl-color-gray-3);
    transition: color 0.2s;
  }

  .social-links a:hover {
    color: var(--sl-color-white);
  }

  @media (max-width: 768px) {
    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
  }
</style>
