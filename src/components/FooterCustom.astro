const currentYear = new Date().getFullYear();
---

<Default {...Astro.props}>
  <div slot="after" class="custom-footer">
    <div class="footer-grid">
      <!-- Column 1: About -->
      <div class="footer-column">
        <h3>Onetime Secret</h3>
        <p>Securely share sensitive information with self-destructing links. Family-operated since 2012.</p>
      </div>

      <!-- Column 2: Resources -->
      <div class="footer-column">
        <h3>Resources</h3>
        <ul>
          <li><a href="/en/introduction">Documentation</a></li>
          <li><a href="/en/rest-api">API Reference</a></li>
          <li><a href="/en/security-best-practices">Security Best Practices</a></li>
          <li><a href="https://github.com/onetimesecret/onetimesecret">GitHub Repository</a></li>
        </ul>
      </div>

      <!-- Column 3: Products -->
      <div class="footer-column">
        <h3>Products</h3>
        <ul>
          <li><a href="/en/secret-links">Secret Links</a></li>
